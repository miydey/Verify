<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:padding="5dp"
        android:background="@color/FaceColor"
        android:text="@string/set_pc_path"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:text="@string/xml_dir"
            android:textColor="@color/FaceColor"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/et_xml_path"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:labelFor="@id/et_xml_path"
            android:gravity="center"
            android:textSize="30sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:text="ftp地址"
            android:textColor="@color/FaceColor"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/et_ftp_address"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:inputType="number"
            android:layout_height="match_parent"
            android:gravity="center"
            android:labelFor="@id/et_ftp_address"
            android:textSize="30sp"
            />
    </LinearLayout>
    <include layout="@layout/layout_select">

    </include>
</LinearLayout>
